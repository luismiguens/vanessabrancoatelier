

<script type="text/javascript">

    $(document).ready(function () {

        var limit_posts = 6;
        var offset_posts = -6;

        var $container = $('#blog-masonry');
        $container.imagesLoaded(function () {
            // init Isotope after all images have loaded
            $container.isotope({
                // options
                itemSelector: '.blog',
                masonry: {
                    //columnWidth: 160,
                    isFitWidth: true
                }
            });
        });

        $('.append-button').on('click', function () {
            // create new item elements
            getItemElements();

            $container.isotope('destroy'); //destroying isotope
            $container = $('#blog-masonry');
            $container.imagesLoaded(function () {
                // init Isotope after all images have loaded
                $container.isotope({
                    // options
                    itemSelector: '.blog',
                    masonry: {
                        //columnWidth: 160,
                        isFitWidth: true
                    }
                });
            });


        $('html, body').animate({scrollTop: $("#posts_button").offset().top - 1400}, 1000);

    });






        function getItemElements() {

            offset_posts = offset_posts + 6;
            $.ajax({
                type: "get",
                url: "{{path("ajax_posts_show_more")}}",
                data: 'limit=' + limit_posts + '&offset=' + offset_posts,
                dataType: "json",
                async: false,
                beforeSend: function (xhr) {
                    if (xhr && xhr.overrideMimeType) {
                        xhr.overrideMimeType('application/json;charset=utf-8');
                    }
                },
                success: function (data) {
                    $("#blog-masonry").append(data.items);
                }
            });

        }

//on start page
        getItemElements();


    });

</script>







<!-- Blog Section -->
<section id="blog" class="text-left">
    <div class="container">

        <div class="section-title center wow fadeIn">
            <h2>{% trans %}blog_my_journal{% endtrans %}</h2>
            <div class="line">
            </div>
            <p>{% trans %}blog_intro{% endtrans %}</p>
        </div>
        <div class="space"></div>

        <div id="blog-masonry"></div>

        <button type="button" class="btn btn-outline btn-primary btn-block append-button" id="posts_button" >show more posts</button>


    </div>

</section>

