

<!-- Blog Section -->
<section id="blog" class="text-left">
    <div class="container">
        <div class="section-title center wow fadeIn">
            <h2>{% trans %}blog_my_journal{% endtrans %}</h2>
            <div class="line">
            </div>
            <p>{% trans %}blog_intro{% endtrans %}</p>
        </div>
        <div class="space"></div>
        
        
        
        
        
        <div id="blog-masonry">

            {% for post in posts %}

                <div class="col-md-4 col-sm-6 blog wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                    <span>{{post.createdAt|date("d")}}<br>{{post.createdAt|date("F")|slice(0, 3) }}</span>

                    {% if (post.image|length) %}
                        <img class="post-img" src="{{ post.getWebPath | imagine_filter('sk_downscale_max_600_600') }}" />
                    {% else %}
                        {{ post.video|replace({' height="315"':'', 'width="560"':'width="350"'})|raw }}
                        {#<iframe width="560" height="315" src="https://www.youtube.com/embed/LQu8PkSXpdQ" frameborder="0" allowfullscreen></iframe>#}
                        {#<iframe width="408" height="230" src="https://www.youtube.com/embed/LQu8PkSXpdQ" frameborder="0" allowfullscreen></iframe>#}
                    {% endif %}

                    <h3>{{post.title}}</h3>
                    <h4>{{post.author}} . {{post.createdAt|date("d/m/Y")}}</h4>
                    <p>{{post.text|slice(0, 260)|raw}}</p>
{#                    <a data-toggle="modal" data-target="#myModal_{{post.id}}" href="#" class="read-more">Read more <i class="fa fa-angle-right"></i></a>#}
                    <a href="{{ url_to_post(post) }}" class="read-more">Read more <i class="fa fa-angle-right"></i></a>



                </div>


                <!-- Modal -->
{#                <div class="modal fade" id="myModal_{{post.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">{{post.title}}</h4>
                            </div>
                            <div class="modal-body">

                                {% if (post.image|length) %}
                                    <img class="post-img" src="{{ post.getWebPath | imagine_filter('sk_downscale_max_600_600') }}" />
                                {% else %}
                                    {{ post.video|raw }}
                                {% endif %}

                                <h3><a href="#">{{post.title}}</a></h3>
                                <h4>{{post.author}} . {{post.createdAt|date("d/m/Y")}}</h4>
                                <p>{{post.text}}</p>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>#}
                <!-- Modal end-->


            {% endfor %}
           
        </div>
    </div>
</section>