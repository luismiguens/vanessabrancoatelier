{% extends 'AppBundle::layout.html.twig' %}
{% block body %}

    {% include 'AppBundle:Default:navigation.html.twig' %}





    <!-- Blog Section -->
    <section id="blog" class="text-left">
        <div class="container">
            <div class="section-title center wow fadeIn">
                <h2>{{post.title}}</h2>
                    {% if (post.image|length) %}
                    <img src="{{ post.getWebPath | imagine_filter('sk_downscale_max_600_600') }}" />
                {% else %}
                    {{ post.video|raw }}
                {% endif %}


                <h4>{{post.author}} . {{post.createdAt|date("d/m/Y")}}</h4>
                <p>{{post.text}}</p>


            </div>
        </div>
    </section>


