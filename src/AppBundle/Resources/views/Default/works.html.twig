<!-- Portfolio Section -->
<section id="works">
    <div class="container">
        <div class="section-title text-center center wow fadeInUp">
            <h2>{% trans %}works_our{% endtrans %} <mark>Portfolio</mark></h2>
            <div class="line">
            </div>
            <p>{% trans %}works_intro{% endtrans %}</p>
        </div>
        <div class="space"></div>
        <div class="categories">
            <ul class="cat text-center">
                <li>
                    <ol class="type">
                        <li><a href="#" data-filter="*" class="active">{% trans %}works_type_all{% endtrans %}</a></li>
                            {% for type in types %}
                            <li><a href="#" data-filter=".{{type.id}}">{{ type}}</a></li>
                            {% endfor %}


                    </ol>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div id="lightbox" class="row wow fadeInUp">


            {% for work in works %}

                {{work.project}}

                {% set t = "" %}
                {% for type in work.type %}
                    {% set t = t ~" "~ type.id %}
                {% endfor %}




