                    <div class="portfolio-item">
                        <div class="hover-bg">
                            <a href="{{ work.getWebPath | imagine_filter('sk_downscale_max_600_600') }}">
                                <div class="hover-text">
                                    <h4>{{work.project}}</h4>
                                    <hr class="line">
                                    <small>{{ work.type|join(', ') }}</small>
                                    <div class="clearfix"></div>
                                    <i class="fa fa-link"></i>
                                </div>

